# Frontend Environment Configuration Example
# AI Refinement Dashboard - V2 Migration
# Copy this file to .env and modify as needed

# API Configuration - Environment-based URLs
VITE_API_VERSION=v2
VITE_V1_BASE_URL=http://localhost:5000/api
VITE_V2_BASE_URL=http://localhost:5001/api

# Current API endpoints (V2)
VITE_API_BASE_URL=http://localhost:5001/api/v2

# Authentication
VITE_AUTH_ENDPOINT=http://localhost:5001/api/auth

# Development settings
VITE_DEV_MODE=true
VITE_DEBUG_API_CALLS=true

# Feature flags
VITE_ENABLE_SPIRIT_SYSTEM=true
VITE_ENABLE_MINION_BUILDER=true
VITE_ENABLE_REFERENCE_MODELS=true

# UI Configuration
VITE_APP_TITLE="AI Refinement Dashboard"
VITE_APP_VERSION="2.0.0"
VITE_DEFAULT_THEME="dark"

# Monitoring
VITE_ENABLE_ANALYTICS=false
VITE_SENTRY_DSN=""

# Production overrides (uncomment for production)
# VITE_API_BASE_URL=/api/v2
# VITE_AUTH_ENDPOINT=/api/auth
# VITE_DEV_MODE=false
# VITE_DEBUG_API_CALLS=false
